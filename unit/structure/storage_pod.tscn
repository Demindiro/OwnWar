script/source = "extends Unit


export var max_materials := 10000
export var materials := 0


func put_materials(p_materials):
	var max_put = max_materials - materials
	if max_put > p_materials:
		materials += p_materials
		return 0
	else:
		materials = max_materials
		return p_materials - max_put


func take_materials(p_materials, exact = false):
	if materials > p_materials:
		materials -= p_materials
		return p_materials
	elif exact:
		return 0
	else:
		var remainder = materials
		materials = 0
		return remainder
"

